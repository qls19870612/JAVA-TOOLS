<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<AnchorPane prefHeight="600" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="sample.fxml.controllers.StringFormatterController">
    <children>
        <VBox prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0"
              AnchorPane.topAnchor="10.0" spacing="10">
            <children>
                <HBox prefHeight="15.0" prefWidth="580.0" spacing="5">
                    <children>
                        <Label prefHeight="27.0" prefWidth="61.0" text="转驼峰"/>
                        <TextField fx:id="uplowerTF" prefHeight="23.0" prefWidth="300.0"/>
                        <Button fx:id="copyBtn" text="复制" onMouseClicked="#onCopyBtnClick"></Button>
                        <Label fx:id="afterConvertTF" prefHeight="27.0"></Label>
                    </children>
                </HBox>
                <HBox prefHeight="15.0" prefWidth="580.0" spacing="5">
                    <children>
                        <Label prefHeight="27.0" prefWidth="61.0" text="转大写"/>
                        <TextField fx:id="upperCaseTF" prefHeight="23.0" prefWidth="300.0"/>
                        <Button fx:id="copyUpperCaseBtn" text="复制" onMouseClicked="#onCopyUpperCaseBtnClick"></Button>
                        <Label fx:id="afterConvertUpperCaseTF" prefHeight="27.0"/>
                    </children>
                </HBox>
                <HBox prefHeight="15.0" prefWidth="580.0" spacing="5">
                    <children>
                        <Label prefHeight="27.0" prefWidth="61.0" text="生成消息"/>
                        <!--<TextField fx:id="upperCaseTF" prefHeight="23.0" prefWidth="300.0"/>-->
                        <Button fx:id="createMsgBtn" text="生成" onMouseClicked="#onCreateMsgBtnClick"></Button>
                        <Button fx:id="openBtn" text="打开" onMouseClicked="#onOpenBtnClick"></Button>
                        <!--<Label fx:id="afterConvertUpperCaseTF" prefHeight="27.0"/>-->
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
