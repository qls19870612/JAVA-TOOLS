<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<AnchorPane prefHeight="600" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="sample.fxml.controllers.StringFormatterController">
    <children>
        <VBox prefHeight="200.0" prefWidth="100.0" spacing="10" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0"
              AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
            <children>
                <HBox prefHeight="15.0" prefWidth="580.0" spacing="5">
                    <children>
                        <Label prefHeight="27.0" prefWidth="61.0" text="转驼峰"/>
                        <TextField fx:id="uplowerTF" prefHeight="23.0" prefWidth="300.0"/>
                        <Button fx:id="copyBtn" onMouseClicked="#onCopyBtnClick" text="复制"/>
                        <Label fx:id="afterConvertTF" prefHeight="27.0"/>
                    </children>
                </HBox>
                <HBox prefHeight="15.0" prefWidth="580.0" spacing="5">
                    <children>
                        <Label prefHeight="27.0" prefWidth="61.0" text="转大写"/>
                        <TextField fx:id="upperCaseTF" prefHeight="23.0" prefWidth="300.0"/>
                        <Button fx:id="copyUpperCaseBtn" onMouseClicked="#onCopyUpperCaseBtnClick" text="复制"/>
                        <Label fx:id="afterConvertUpperCaseTF" prefHeight="27.0"/>
                    </children>
                </HBox>
                <HBox prefHeight="15.0" prefWidth="580.0" spacing="5">
                    <children>
                        <Label prefHeight="27.0" prefWidth="61.0" text="生成消息"/>
                        <!--<TextField fx:id="upperCaseTF" prefHeight="23.0" prefWidth="300.0"/>-->
                        <Button fx:id="createMsgBtn" onMouseClicked="#onCreateMsgBtnClick" text="生成"/>
                        <Button fx:id="openBtn" onMouseClicked="#onOpenBtnClick" text="打开"/>
                        <!--<Label fx:id="afterConvertUpperCaseTF" prefHeight="27.0"/>-->
                    </children>
                </HBox>
                <HBox prefHeight="23.0" prefWidth="580.0">
                    <children>
                        <Label prefHeight="15.0" prefWidth="61.0" text="转字符串"/>
                    </children>
                </HBox>
                <TextArea fx:id="srcStr" prefHeight="116.0" prefWidth="580.0"/>
                <TextArea fx:id="toStr" prefHeight="314.0" prefWidth="580.0"/>
            </children>
        </VBox>
        <AnchorPane AnchorPane.topAnchor="10" AnchorPane.rightAnchor="10" prefWidth="200" prefHeight="110"
                    onDragOver="#onDragOver"
                    onDragDropped="#onDragDropped" style="-fx-background-color: LIGHTSKYBLUE;">
            <Label AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" alignment="CENTER">
                拖动到此处解压游戏服日志
            </Label>
        </AnchorPane>
    </children>
</AnchorPane>
