            <version>1.0.4</version>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>RELEASE</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>io.ytcode</groupId>
            <artifactId>reflect</artifactId>
            <version>1.2.1</version>
        </dependency>
        <dependency>
